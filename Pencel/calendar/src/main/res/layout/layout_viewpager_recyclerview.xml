<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_magic"
        android:gravity="right">
        <ImageButton
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="visible"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_magic"
            android:gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#ffffff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/addNotifination"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="Thêm mới"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_magic"
                    />
                <Button
                    android:id="@+id/saveNotifination"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="Lưu"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_magic"
                    />

            </LinearLayout>

        </LinearLayout>
       <TableLayout
           android:id="@+id/setupNotification"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:visibility="visible">
           <TableRow>
               <TextView
                   android:id="@+id/nameCustomer"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"/>
               <Button
                    android:id="@+id/nameDajlog"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="name"/>
           </TableRow>
           <TableRow>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"/>
               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="HOUR"/>
           </TableRow>
           <TableRow>
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="textMultiLine"
                   android:ems="18"
                   android:id="@+id/adNote"
                   android:focusableInTouchMode="true"
                   />

           </TableRow>
       </TableLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtEventMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/h3"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgFailed"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:visibility="gone"
        android:src="@drawable/ic_cont_failed" />

    <TextView
        android:id="@+id/txtCalendarMessage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:textSize="@dimen/h3"
        android:textStyle="bold"
        android:visibility="gone" />
    </LinearLayout>

    </ScrollView>

</LinearLayout>